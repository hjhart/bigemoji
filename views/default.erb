<style type="text/css">

    @-webkit-keyframes rotate {
         from {
                 -webkit-transform: rotate(0deg);
         }
         to {
                 -webkit-transform: rotate(360deg);
         }
 }

    #emoji {
        -webkit-animation-name: rotate;
        -webkit-animation-duration: 90s;
        -webkit-animation-iteration-count: infinite;
        -webkit-animation-timing-function: linear;
    }

    body {
        /* iPhone */
        background-image: -webkit-gradient(radial, center center, 0, center center, 150, from(#ffffff), to(#e8fffb));
        /* Desktop */
        background-image: -webkit-radial-gradient(circle, #ffffff, #e8fffb);

        display: table;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        -webkit-text-size-adjust: none;
    }

</style>

</head>

<div style="text-align: center; vertical-align: middle; display: table-cell;" id="container" class="row">

  <h1 id="emoji" style="font-size: 300px;"><%= @emoji %></h1>
  <h1 style="text-shadow: 0px 1px 0px #46290f; font-size: 42px;">Ohmiglob Emoji!</h1>
  <form action="/" method="post">
	<input type="hidden" name="caption_id" value="<%= @emoji_id %>" id="caption_id">
	<div class="row">
		<div class="eleven columns">
		    <input id="caption" type="text" name="caption" placeholder="Emojicomment!?"/>
		</div>
		<div class="one columns">
			<input type="submit" class="button success radius" value="&#128169;"/>
		</div>
	</div>
  </form>
</div>